<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Framelayout_background_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imagen_fondo_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/ao__fondomesa_de_trabajo_5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btn_portal_cliente"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_marginTop="200dp"
            android:padding="16dp"
            android:src="@drawable/ao__bot_n_1mesa_de_trabajo_1"/>

        <ImageView
            android:id="@+id/button_rastreo"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:padding="16dp"
            android:src="@drawable/ao__bot_n_2mesa_de_trabajo_1"/>

        <ImageView
            android:id="@+id/button_producto"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:padding="16dp"
            android:layout_marginBottom="70dp"
            android:src="@drawable/ao__bot_n_3mesa_de_trabajo_1"/>

    </LinearLayout>

</FrameLayout>

