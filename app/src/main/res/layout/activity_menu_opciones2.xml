<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Framelayout_background_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imagen_fondo_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/ao_portada_fondo1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ao_logo_"
            android:layout_weight="7"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <android.support.v7.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                app:useDefaultMargins="true"
                app:columnCount="2">

                <ImageView
                    android:id="@+id/button_contacto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ao_boton_contacto"
                    app:layout_columnSpan="2"
                    app:layout_columnWeight="1"/>

                <ImageView
                    android:id="@+id/btn_portal_cliente"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ao_boton_portal_de_clientes"
                    app:layout_columnSpan="1"
                    app:layout_columnWeight="5"/>

                <ImageView
                    android:id="@+id/button_rastreo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ao_boton_rastreo"
                    app:layout_columnSpan="1"
                    app:layout_columnWeight="5"/>

                <ImageView
                    android:id="@+id/button_ubicacion_sucursales"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ao_boton_sucursales"
                    app:layout_columnSpan="1"
                    app:layout_columnWeight="5"/>

                <ImageView
                    android:id="@+id/button_producto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ao_boton_productos"
                    app:layout_columnSpan="1"
                    app:layout_columnWeight="5"/>

                <ImageView
                    android:id="@+id/button_otros"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ao_boton_utiler_as"
                    app:layout_columnSpan="2"
                    app:layout_columnWeight="1"/>

            </android.support.v7.widget.GridLayout>

        </FrameLayout>



    </LinearLayout>

</FrameLayout>

