<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.acerosocotlan.progresoacerosocotlan.Controlador.Splash">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/paisaje">
        <FrameLayout
            android:id="@+id/nubes_splash"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/nubesaceroocotlan">
        </FrameLayout>
        <LinearLayout
            android:id="@+id/texto_splash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/splash_txt_bienvenidos"
                android:textColor="@android:color/white"
                android:textSize="50sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/carro_splash"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="130dp"
                android:layout_height="90dp"
                android:layout_gravity="bottom|end"
                android:padding="5dp"
                android:src="@drawable/camonacerosocotlanmaterial"/>
        </FrameLayout>
    </FrameLayout>
</android.support.design.widget.CoordinatorLayout>
