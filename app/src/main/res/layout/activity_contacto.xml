<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controlador.Contacto.Contacto">

    <ImageView
        android:id="@+id/img_contacto_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/ao_portada_fondo1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:scaleType="centerCrop"
            android:src="@drawable/ao_logo_"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <android.support.v7.widget.GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:useDefaultMargins="true"
                app:columnCount="2">

                <ImageView
                    android:id="@+id/btn_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ao_icono_tel_fono"/>

                <ImageView
                    android:id="@+id/btn_correo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ao_icono_correo"/>

                <ImageView
                    android:id="@+id/btn_sms"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ao_icono_mensaje"/>

                <ImageView
                    android:id="@+id/btn_whatsapp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ao_icono_whatsapp"/>

                <ImageView
                    android:id="@+id/btn_facebook"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ao_icono_facebook"/>

                <ImageView
                    android:id="@+id/btn_twitter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ao_icono_twitter"/>

            </android.support.v7.widget.GridLayout>
        </FrameLayout>


    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>