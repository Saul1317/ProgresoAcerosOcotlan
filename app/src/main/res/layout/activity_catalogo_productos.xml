<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controlador.Catalogo.CatalogoProductos">

    <ImageView
        android:id="@+id/img_catalago_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/ao__fondomesa_de_trabajo_5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/btn_catalogo_comercial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Comerciales"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/colorPrimary" />

        <Button
            android:id="@+id/btn_catalogo_perfiles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Perfiles Tuberales y tuberÃ­as"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/colorPrimary"/>

        <Button
            android:id="@+id/btn_catalogo_estructurales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Estructurales"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/colorPrimary"/>

        <Button
            android:id="@+id/btn_catalogo_planos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Planos"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/colorPrimary"/>

        <Button
            android:id="@+id/btn_catalogo_corrugados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Corrugados y trefilados"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/colorPrimary"/>

        <Button
            android:id="@+id/btn_catalogo_galvanizados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Galvanizados"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/colorPrimary"/>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>