<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controlador.Catalogo.PerfilesTubulares">

    <ImageView
        android:id="@+id/img_perfiles_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/ao__fondomesa_de_trabajo_5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:padding="16dp"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/btn_producto_tubo_cedula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="TUBO CEDULA 30-40"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/colorPrimary" />

        <Button
            android:id="@+id/btn_producto_lamina_galvanizada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="LAMINA GALVANIZADA"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/colorPrimary"/>

        <Button
            android:id="@+id/btn_producto_tubo_estructural"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="TUBO ESTRUCTURAL"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/colorPrimary"/>

        <Button
            android:id="@+id/btn_producto_tuberia_conduccio_fluidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="TUBERÍA PARA CONDUCCIÓN DE FLUIDOS"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/colorPrimary"/>

        <Button
            android:id="@+id/btn_producto_ptr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="PTR"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/colorPrimary"/>

        <Button
            android:id="@+id/btn_producto_tubular_pintado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="TUBULAR PINTADO"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/colorPrimary"/>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>