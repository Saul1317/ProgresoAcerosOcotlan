<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator_progreso"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.acerosocotlan.progresoacerosocotlan.Controlador.RastreoPedido.ProgresoEntregaActivity">
    <include layout="@layout/content_progreso_entrega" />
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="end">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imagen_touch_mano"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:elevation="5dp"
                    android:visibility="invisible"
                    android:src="@drawable/touch2"/>
                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/fab_margin"
                    app:elevation="6dp"
                    app:srcCompat="@drawable/ic_menu" />
            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imagen_touch_mano2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:elevation="5dp"
                    android:visibility="invisible"
                    android:src="@drawable/touch2"/>
                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_mostrar_historico"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/fab_margin"
                    android:layout_gravity="center"
                    app:elevation="6dp"
                    app:srcCompat="@drawable/ic_local_shipping" />
            </FrameLayout>
            <Button
                android:id="@+id/boton_salir"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_margin="@dimen/fab_margin"
                android:layout_gravity="center"
                android:background="@drawable/boton_redondo_salir"
                android:text="Salir"
                android:textStyle="bold"
                android:theme="@style/boton_salir"
                android:elevation="6dp"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/imagen_mano_click2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_gravity="center_vertical|end"
            android:elevation="10dp"
            android:src="@drawable/aprovechar"/>
    </FrameLayout>
</android.support.design.widget.CoordinatorLayout>
