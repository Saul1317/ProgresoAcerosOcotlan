<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controlador.Otros.Convertidor.MenuConvertidor">

    <ImageView
        android:id="@+id/imagen_fondo_menu_convertidor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/ao_portada_fondo1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:scaleType="centerCrop"
            android:src="@drawable/ao_logo_"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <android.support.v7.widget.GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:useDefaultMargins="true"
                app:columnCount="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:id="@+id/LinLay_Peso">
                    <ImageView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/imageView4"
                        android:src="@drawable/c_peso"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/textView5"
                        android:textSize="18sp"
                        android:layout_marginLeft="15dp"
                        android:text="Peso"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:id="@+id/LinLay_Longitud">
                    <ImageView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/imageView5"
                        android:src="@drawable/c_longitud"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/textView6"
                        android:textSize="18sp"
                        android:layout_marginLeft="15dp"
                        android:text="Longitud"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:id="@+id/LinLay_Temperatura">
                    <ImageView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/imageView6"
                        android:src="@drawable/c_temperatura"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/textView7"
                        android:textSize="18sp"
                        android:layout_marginLeft="15dp"
                        android:text="Temperatura"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:id="@+id/LinLay_Area">
                    <ImageView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/imageView7"
                        android:src="@drawable/c_area"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/textView8"
                        android:textSize="18sp"
                        android:layout_marginLeft="15dp"
                        android:text="Área"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:id="@+id/LinLay_Presion">
                    <ImageView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/imageView8"
                        android:src="@drawable/c_presion"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/textView9"
                        android:textSize="18sp"
                        android:layout_marginLeft="15dp"
                        android:text="Presión"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:id="@+id/LinLay_Potencia">
                    <ImageView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/imageView9"
                        android:src="@drawable/c_potencia"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/textView10"
                        android:textSize="18sp"
                        android:layout_marginLeft="15dp"
                        android:text="Potencia"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:id="@+id/LinLay_Calor">
                    <ImageView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/imageView10"
                        android:src="@drawable/c_caloryenergia"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/textView11"
                        android:textSize="18sp"
                        android:layout_marginLeft="15dp"
                        android:text="Calor y energia"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:id="@+id/LinLay_Volumen">
                    <ImageView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/imageView11"
                        android:src="@drawable/c_volumen"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/textView12"
                        android:textSize="18sp"
                        android:layout_marginLeft="15dp"
                        android:text="Volumen"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp" />
                </LinearLayout>

            </android.support.v7.widget.GridLayout>
        </FrameLayout>


    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>