<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Controlador.VerOferta"
    tools:showIn="@layout/activity_ver_oferta">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imagen_fondo_estatus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#cbf3ff"
            android:scaleType="fitXY"/>
        <LinearLayout
            android:id="@+id/linear_layout_filtro_ofertas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:alpha="0.4"
            android:visibility="invisible"
            android:orientation="horizontal"></LinearLayout>
        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:cardview="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardview_detalle_entrega"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="50dp"
            android:layout_marginHorizontal="10dp"
            android:alpha="0.95"
            cardview:cardElevation="16dp"
            cardview:cardCornerRadius="10dp">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/ofertas_aceros_ocotlan_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    app:reverseLayout="true"
                    android:background="@color/texto_blanco">
                </android.support.v7.widget.RecyclerView>
                <ImageView
                    android:id="@+id/deslizamiento_tuto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/deslizaizquierda"
                    android:layout_gravity="center_vertical"
                    android:visibility="invisible"
                    android:layout_marginLeft="100dp"/>
            </FrameLayout>
        </android.support.v7.widget.CardView>
    </FrameLayout>
</android.support.constraint.ConstraintLayout>