<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controlador.Catalogo.Planos">

    <ImageView
        android:id="@+id/img_planos_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/ao_portada_fondo1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:src="@drawable/ao_logo_"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:padding="16dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_producto_placa_acero2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height_size"
                android:text="PLACAS DE ACEROS"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/colorPrimary" />

            <Button
                android:id="@+id/btn_producto_lamina_negra"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height_size"
                android:text="LAMINA NEGRA"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/colorPrimary"/>

            <Button
                android:id="@+id/btn_producto_galvanizados2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height_size"
                android:text="LAMINA GALVANIZADA"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/colorPrimary"/>

        </LinearLayout>
    </LinearLayout>



</android.support.design.widget.CoordinatorLayout>